<body>
    <div class="password-container">
        <h1>üîê Password Strength Checker</h1>

        <!-- Password Input -->
        <div class="input-group">
            <input type="password" id="password" placeholder="Enter your password">
            <button class="toggle-password" id="toggle-password">üëÅÔ∏è</button>
        </div>

        <!-- Strength Meter -->
        <div class="strength-meter">
            <div class="meter-bar">
                <div class="meter-fill" id="meter-fill"></div>
            </div>
            <div class="strength-text" id="strength-text">Enter a password</div>
        </div>

        <!-- Requirements Checklist -->
        <ul class="requirements" id="requirements">
            <li class="requirement" data-requirement="length">
                <span class="icon">‚úì</span>
                <span>At least 8 characters</span>
            </li>
            <li class="requirement" data-requirement="lowercase">
                <span class="icon">‚úì</span>
                <span>At least one lowercase letter (a-z)</span>
            </li>
            <li class="requirement" data-requirement="uppercase">
                <span class="icon">‚úì</span>
                <span>At least one uppercase letter (A-Z)</span>
            </li>
            <li class="requirement" data-requirement="number">
                <span class="icon">‚úì</span>
                <span>At least one number (0-9)</span>
            </li>
            <li class="requirement" data-requirement="special">
                <span class="icon">‚úì</span>
                <span>At least one special character (!@#$%^&*)</span>
            </li>
        </ul>

        <!-- Tips -->
        <div class="tips">
            <h3>üí° Tips for a strong password:</h3>
            <ul>
                <li>Use a phrase or combination of words</li>
                <li>Replace letters with numbers (e.g., 'a' with '4')</li>
                <li>Avoid personal information</li>
                <li>Don't reuse passwords</li>
            </ul>
        </div>

        <!-- Password Generator -->
        <div class="generate-section">
            <button class="generate-btn" id="generate-btn">üé≤ Generate Strong Password</button>
            <div class="generated-password" id="generated-password"></div>
            <button class="copy-btn" id="copy-btn" style="display: none;">üìã Copy to Clipboard</button>
        </div>
    </div>

    <script>
        // ============================================
        // DOM ELEMENTS
        // ============================================
        const passwordInput = document.querySelector('#password');
        const togglePasswordBtn = document.querySelector('#toggle-password');
        const meterFill = document.querySelector('#meter-fill');
        const strengthText = document.querySelector('#strength-text');
        const requirements = document.querySelectorAll('.requirement');
        const generateBtn = document.querySelector('#generate-btn');
        const generatedPasswordEl = document.querySelector('#generated-password');
        const copyBtn = document.querySelector('#copy-btn');

        // ============================================
        // PASSWORD REQUIREMENTS (using regex)
        // ============================================
        const passwordRequirements = {
            length: {
                regex: /.{8,}/,          // At least 8 characters
                message: 'At least 8 characters'
            },
            lowercase: {
                regex: /[a-z]/,          // At least one lowercase
                message: 'At least one lowercase letter'
            },
            uppercase: {
                regex: /[A-Z]/,          // At least one uppercase
                message: 'At least one uppercase letter'
            },
            number: {
                regex: /[0-9]/,          // At least one number
                message: 'At least one number'
            },
            special: {
                regex: /[!@#$%^&*(),.?":{}|<>]/,  // At least one special char
                message: 'At least one special character'
            }
        };

        // ============================================
        // FUNCTIONS
        // ============================================

        // Check single requirement
        const checkRequirement = (password, requirement) => {
            return passwordRequirements[requirement].regex.test(password);
        };

        // Check all requirements and return score
        const checkAllRequirements = (password) => {
            let score = 0;
            
            // Check each requirement
            Object.keys(passwordRequirements).forEach(req => {
                const isValid = checkRequirement(password, req);
                const element = document.querySelector(`[data-requirement="${req}"]`);
                
                if (isValid) {
                    element.classList.add('valid');
                    element.classList.remove('invalid');
                    score++;
                } else {
                    element.classList.remove('valid');
                    element.classList.add('invalid');
                }
            });

            // Bonus points for extra length
            if (password.length >= 12) score += 0.5;
            if (password.length >= 16) score += 0.5;

            return score;
        };

        // Get strength level based on score
        const getStrengthLevel = (score) => {
            if (score <= 2) return { level: 'weak', text: 'Weak üòü' };
            if (score <= 3) return { level: 'fair', text: 'Fair üòê' };
            if (score <= 4) return { level: 'good', text: 'Good üôÇ' };
            return { level: 'strong', text: 'Strong üí™' };
        };

        // Update the UI
        const updateStrengthMeter = (password) => {
            // Empty password
            if (password.length === 0) {
                meterFill.className = 'meter-fill';
                strengthText.className = 'strength-text';
                strengthText.textContent = 'Enter a password';
                requirements.forEach(req => {
                    req.classList.remove('valid', 'invalid');
                });
                return;
            }

            // Check requirements and get score
            const score = checkAllRequirements(password);
            const strength = getStrengthLevel(score);

            // Update meter
            meterFill.className = `meter-fill ${strength.level}`;

            // Update text
            strengthText.className = `strength-text ${strength.level}`;
            strengthText.textContent = strength.text;
        };

        // Toggle password visibility
        const togglePasswordVisibility = () => {
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;
            togglePasswordBtn.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
        };

        // Generate random password
        const generatePassword = (length = 16) => {
            const lowercase = 'abcdefghijklmnopqrstuvwxyz';
            const uppercase = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
            const numbers = '0123456789';
            const special = '!@#$%^&*()_+-=';
            const allChars = lowercase + uppercase + numbers + special;

            let password = '';

            // Ensure at least one of each type
            password += lowercase[Math.floor(Math.random() * lowercase.length)];
            password += uppercase[Math.floor(Math.random() * uppercase.length)];
            password += numbers[Math.floor(Math.random() * numbers.length)];
            password += special[Math.floor(Math.random() * special.length)];

            // Fill rest with random characters
            for (let i = password.length; i < length; i++) {
                password += allChars[Math.floor(Math.random() * allChars.length)];
            }

            // Shuffle the password
            password = password.split('').sort(() => Math.random() - 0.5).join('');

            return password;
        };

        // Copy to clipboard
        const copyToClipboard = async (text) => {
            try {
                await navigator.clipboard.writeText(text);
                copyBtn.textContent = '‚úÖ Copied!';
                setTimeout(() => {
                    copyBtn.textContent = 'üìã Copy to Clipboard';
                }, 2000);
            } catch (err) {
                // Fallback for older browsers
                const textarea = document.createElement('textarea');
                textarea.value = text;
                document.body.appendChild(textarea);
                textarea.select();
                document.execCommand('copy');
                document.body.removeChild(textarea);
                copyBtn.textContent = '‚úÖ Copied!';
            }
        };

        // ============================================
        // EVENT LISTENERS
        // ============================================

        // Check password on input
        passwordInput.addEventListener('input', (e) => {
            updateStrengthMeter(e.target.value);
        });

        // Toggle password visibility
        togglePasswordBtn.addEventListener('click', togglePasswordVisibility);

        // Generate password
        generateBtn.addEventListener('click', () => {
            const newPassword = generatePassword(16);
            generatedPasswordEl.textContent = newPassword;
            generatedPasswordEl.classList.add('show');
            copyBtn.style.display = 'inline-block';

            // Also fill the input and check strength
            passwordInput.value = newPassword;
            passwordInput.type = 'text';
            togglePasswordBtn.textContent = 'üôà';
            updateStrengthMeter(newPassword);
        });

        // Copy generated password
        copyBtn.addEventListener('click', () => {
            copyToClipboard(generatedPasswordEl.textContent);
        });
    </script>
</body>
</html>


<!-- 
// REGULAR EXPRESSIONS (REGEX)
// Test if pattern exists in string

/.{8,}/          // Any 8+ characters
/[a-z]/          // Any lowercase letter
/[A-Z]/          // Any uppercase letter
/[0-9]/          // Any digit
/[!@#$%^&*]/     // Any of these special characters

// Using regex
const hasLowercase = /[a-z]/.test("Hello");  // true
const hasNumber = /[0-9]/.test("Hello");     // false

// Common regex patterns:
/^[a-zA-Z]+$/    // Only letters
/^\d+$/          // Only digits
/^.{8,16}$/      // 8-16 characters
/\s/             // Whitespace
/[^\s]/          // Non-whitespace

// PASSWORD STRENGTH ALGORITHM
// 1. Check each requirement
// 2. Count passed requirements
// 3. Calculate percentage or level
// 4. Update visual feedback 
-->
